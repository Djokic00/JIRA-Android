<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="100dp"
                                                   android:layout_marginTop="10dp"
                                                   android:layout_marginLeft="10dp"
                                                   android:layout_marginRight="10dp">
    <ImageView
            android:id="@+id/bug"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/bug_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
    />

    <TextView
            style="@style/TicketTabsText"
            android:id="@+id/ticketName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/bug"
            app:layout_constraintBottom_toTopOf="@id/ticketDescription"
            android:layout_marginStart="16dp"
            android:textStyle="bold"/>

    <TextView
            style="@style/TicketTabsText"
            android:id="@+id/ticketDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ticketName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/bug"
            android:layout_marginStart="16dp"/>

    <ImageView
            android:id="@+id/moveTicket"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/move_ticket_icon"
            style="@style/ImageViewStyle"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/deleteTicket"/>
    <ImageView
            android:id="@+id/deleteTicket"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/delete_ticket_icon"
            style="@style/ImageViewStyle"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>